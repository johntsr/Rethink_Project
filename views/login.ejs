<!DOCTYPE html>
<html>
    <head>
	    <meta charset="utf-8" />
		<script src="http://code.jquery.com/jquery-2.2.4.min.js"></script>
		<script src="signin.js"></script>
	    <title>Log in</title>
    </head>

    <body>

		<% if (message) { %>
		    <%= message %>
		<% } %>

		<form id="form_login" action="/login" method="post">
		    <div>
		        <label>Username:</label>
		        <input type="text" name="username" value="test-user"/>
		    </div>
		    <div>
		        <label>Password:</label>
		        <input type="password" name="password" value="test-password"/>
		    </div>
		    <div>
		        <input type="submit" value="Log In"/>
		    </div>
		</form>

		<br>
		<br>
		<br>
		<br>
		<br>

		<form id="form_signin" method="post">
		    <div>
		        <label>Username:</label>
		        <input id="username_signin" type="text" name="username"/>
		    </div>
		    <div>
		        <label>Password:</label>
		        <input id="password_signin" type="password" name="password"/>
		    </div>
		    <div>
		        <label>Password Again:</label>
		        <input id="password_signin_again" type="password" name="password-again"/>
		    </div>
		    <div>
		        <input type="submit" value="Sign In"/>
				<p id='signinResponse' class="serverResult"></p>
		    </div>
		</form>

    </body>
</html>
